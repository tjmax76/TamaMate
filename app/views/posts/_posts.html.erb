<% if @posts.length > 0 %>
  <div class="posts-wrapper">
    <% @posts.each do |post| %>
      <div class="post-content">
        <div class="name">
          <p>名前：<%= post.name %></p>
        </div>
        <div class="rule">
          <p>ルール：<%= post.rule.name %></p>
        </div>
        <div class="room_number">
          <p>部屋id：<%= post.room_number %></p>
        </div>
        <div class="text">
          <p>募集メッセージ<br>
            <%= post.text %><br>
          </p>
        </div>
        <div class="destroy">
          <form id="destroy-form<%= post.id %>">
            <input type="password" name="password" class="password-field" placeholder="パスワードを入力" id="password-field<%= post.id %>">
            <input type="submit" class="destroy-btn" value="削除" id="destroy-btn<%= post.id %>">
          </form>
        </div>
        <div class="created_at">
          <p><%= post.created_at %></p>
        </div>
      </div>
    <% end %>
  <%= paginate @posts %>
  </div>
<% end %>
