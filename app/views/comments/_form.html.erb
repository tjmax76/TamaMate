<h2>コメント投稿</h2>

<%= form_with model: [@post, @comment], local: true, class: "comment-form" do |f| %>
  <%= render "layouts/error_messages", model: f.object %><br>
  <div class="field">
    <%= f.label "名前" %><br>
    <%= f.text_field :name, id: "comment_name#{@post.id}" %>
  </div>

  <div class="field">
    <%= f.label "コメント内容" %><br>
    <%= f.text_area :text, id: "comment_text#{@post.id}" %>
  </div>

  <div class="field">
    <%= f.label "パスワード " %><em>※パスワードを設定しておくと投稿の削除ができます</em><br>
    <%= f.password_field :password, maxlength: 4,  placeholder: "半角数字4ケタ", class: "password", id: "comment_id#{@post.id}", autocomplete: "new-password" %>
  </div>

  <%= f.submit "コメントする", class: "submit" %>
<% end %>